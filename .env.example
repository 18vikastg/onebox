# Environment Variables for Production
# Copy this file to .env and fill in your actual values

# ======================
# Gmail Configuration
# ======================
GMAIL_PRIMARY_EMAIL=your-primary-email@gmail.com
GMAIL_PRIMARY_PASSWORD=your-app-password-here
GMAIL_SECONDARY_EMAIL=your-secondary-email@gmail.com
GMAIL_SECONDARY_PASSWORD=your-secondary-app-password

# ======================
# OpenAI Configuration
# ======================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ======================
# Database Configuration
# ======================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=emails

# ======================
# Application Configuration
# ======================
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# ======================
# Slack Integration
# ======================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#email-notifications

# ======================
# Security Configuration
# ======================
SESSION_SECRET=your-random-session-secret-here
JWT_SECRET=your-jwt-secret-here

# ======================
# RAG Configuration
# ======================
RAG_ENABLED=true
VECTOR_DB_PATH=./reply_vector_db
RAG_MODEL=gpt-3.5-turbo

# ======================
# Monitoring Configuration
# ======================
LOG_LEVEL=info
ENABLE_METRICS=true
